<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>mach.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.7 </green>
      <blue>  0.5 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <!-- Mach -->
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>velocities/mach</property>
    <interpolation>
     <entry><ind> 0.0 </ind><dep> 180 </dep></entry>
     <entry><ind> 0.7 </ind><dep> 200 </dep></entry>
     <entry><ind> 0.8 </ind><dep> 220 </dep></entry>
     <entry><ind> 0.9 </ind><dep> 240 </dep></entry>
     <entry><ind> 1.0 </ind><dep> 260 </dep></entry>
     <entry><ind> 1.2 </ind><dep> 300 </dep></entry>
     <entry><ind> 1.6 </ind><dep> 320 </dep></entry>
     <entry><ind> 1.8 </ind><dep> 360 </dep></entry>
     <entry><ind> 2.0 </ind><dep> 400 </dep></entry>
     <entry><ind> 2.4 </ind><dep> 440 </dep></entry>
     <entry><ind> 3.0 </ind><dep> 480 </dep></entry>
     <entry><ind> 3.4 </ind><dep> 500 </dep></entry>
     <entry><ind> 3.8 </ind><dep> 520 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center> 
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
