<PropertyList>

 <sim>

  <description>FG BIRD 107</description>
  <author>Patrizio Melis (3D, FDM)</author>
  <status>alpha</status>

  <flight-model>ufo</flight-model>

  <startup>
   <splash-texture>Aircraft/FG-BIRD-107/splash.jpg</splash-texture>
  </startup>

  <sound>
   <path type="string">Aircraft/FG-BIRD-107/Sounds/sound.xml</path>
  </sound>

  <submodels> 
<!--  -->
  </submodels>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <model>
   <path>Aircraft/FG-BIRD-107/Models/fg-bird-107.xml</path>
  </model>

  <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">  0.00 </x-offset-m>	<!-- Right -->
        <y-offset-m archive="y">  1.05 </y-offset-m>	<!-- Up    -->
        <z-offset-m archive="y"> -1.18 </z-offset-m>	<!-- Back  -->
        <default-field-of-view-deg> 85 </default-field-of-view-deg>
        <pitch-offset-deg> -6.3 </pitch-offset-deg>
      </config>
  </view>
  
  <view n="100">
     <name>Pilot cam</name>
      <internal archive="y">false</internal>
       <config>
        <from-model type="bool">true</from-model>
        <from-model-idx type="int">0</from-model-idx>
        <x-offset-m type="double">  0.00 </x-offset-m> <!--left-->
        <y-offset-m type="double">  0.98 </y-offset-m> <!--up-->
        <z-offset-m type="double"> -1.44 </z-offset-m> <!--back-->
        <pitch-offset-deg>3</pitch-offset-deg>
        <heading-offset-deg>180</heading-offset-deg>
        <default-field-of-view-deg>65</default-field-of-view-deg>
       </config>
    </view>

  <help>
   <title>FG-BIRD-107</title>
 
  </help>

  <multiplay>
    <generic>
       <float n="0"> 1.0 </float>
       <float n="1"> 1.0 </float>
    </generic>
  </multiplay>

</sim>

 <nasal>
 </nasal>


</PropertyList>
